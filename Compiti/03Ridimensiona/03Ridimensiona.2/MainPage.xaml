<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_03Ridimensiona._2.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="30"
            Padding="30">

            <Label
                Text="Inserisci la nuova dimensione orizzontale del rettangolo"
                TextColor="Green"
                HorizontalOptions="Center">
            </Label>

            <Entry
                x:Name="entry_dim"
                Text="Dimensione X"
                WidthRequest="150"
                HeightRequest="50">
            </Entry>

            <Button
                Text="Ridimensiona"
                TextColor="White"
                Clicked="Button_Clicked"
                WidthRequest="150"
                HeightRequest="50">
            </Button>

            <Line
                X1="0"
                Y1="400"
                X2="10000"
                Y2="400"
                Stroke="Red"
                StrokeThickness="3">
            </Line>

            <BoxView
                x:Name="rettangolo"
                Color="Green"
                HorizontalOptions="Center"
                WidthRequest="150"
                HeightRequest="100">
            </BoxView>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
